<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/btn_submit_ls_order">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="#302b63"
            android:textColor="#fff"
            android:padding="5dp"
            android:text="Your Order List"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/section_order_list"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="180dp"
                    android:background="#86A8E7"
                    android:layout_alignParentTop="true">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_ls_order_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/section_order_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#373B44"
                    android:padding="10dp"
                    android:layout_marginVertical="5dp"
                    android:layout_below="@+id/section_order_list">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="#fff"
                                android:layout_marginVertical="5dp"
                                android:text="Service Cost"/>
                            <TextView
                                android:id="@+id/tv_ls_service_cost"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="#fff"
                                android:layout_marginVertical="5dp"
                                android:text="0"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="#fff"
                                android:layout_marginVertical="5dp"
                                android:text="Starting Price"/>
                            <TextView
                                android:id="@+id/tv_ls_delivery_charge"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="#fff"
                                android:layout_marginVertical="5dp"
                                android:text="0"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="#fff"
                                android:layout_marginVertical="5dp"
                                android:text="Total Payable"/>
                            <TextView
                                android:id="@+id/tv_ls_total_payable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="#fff"
                                android:layout_marginVertical="5dp"
                                android:text="0"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/section_order_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#7F7FD5"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/section_order_cost">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delivery Address"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                    <ScrollView
                        android:id="@+id/scrollView_order_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardUseCompatPadding="true"
                                app:contentPadding="10dp">
                                <EditText
                                    android:id="@+id/et_ls_client_house_no"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:hint="House Address"/>
                            </android.support.v7.widget.CardView>
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardUseCompatPadding="true"
                                app:contentPadding="10dp">
                                <EditText
                                    android:id="@+id/et_ls_client_zip_code"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:hint="Zip Code"/>
                            </android.support.v7.widget.CardView>
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardUseCompatPadding="true"
                                app:contentPadding="10dp">
                                <Spinner
                                    android:id="@+id/spn_ls_area"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:entries="@array/area_list"></Spinner>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>


    <Button
        android:id="@+id/btn_submit_ls_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Confirm"/>

</RelativeLayout>